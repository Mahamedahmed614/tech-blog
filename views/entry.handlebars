<div class="text-center">
  <h2>{{title}}</h2>
  <p>By {{user.name}} on {{format_date date_created}}</p>
  <p>
    {{content}}
  </p>
<h3>Leave a Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button id = 'post-button'  type="submit" class="btn btn-primary" data-entry_id = {{id}}>Post!</button>
      </div>
    </form>
  </div>
</div>

  <div class="col-md-6 comment-list">
    <h3>Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h5>By {{user.name}} on {{format_date date_created}}</h5>
        <p>{{content}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="../js/entry.js"></script>
