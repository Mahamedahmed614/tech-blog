{{#each entries as |entry| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/entry/{{entry.id}}">{{entry.title}}</a>
    </h2>
    <p>Created by {{entry.user.name}} on {{format_date entry.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{entry.content}}
    </p>
  </div>
  {{#each comments as |comment|}}
  <div class="col-md-5">
    <p>{{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
  {{/each}}
</div>
{{/each}}